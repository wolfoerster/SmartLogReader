<my:Dialog x:Class="SmartLogReader.MyMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:SmartLogReader"
        Title="MyMessageBox" SizeToContent="WidthAndHeight" WindowStyle="ToolWindow">
  <Grid Margin="4">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Border BorderThickness="1" BorderBrush="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" Padding="4">
      <TextBlock x:Name="tb" FontSize="13"/>
    </Border>
    <!-- -->
    <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
      <Button x:Name="okButton" Margin="0,0,6,0" MinWidth="80" Height="23" IsDefault="True" Click="OnButtonOK" Content="OK"/>
      <Button x:Name="btnCancel" MinWidth="80" Height="23" IsCancel="True" Content="Cancel"/>
    </StackPanel>
  </Grid>
</my:Dialog>
