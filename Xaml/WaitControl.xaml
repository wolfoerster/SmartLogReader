<UserControl x:Class="SmartLogReader.WaitControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid Cursor="Wait">
    <ProgressBar Name="progressBar" Minimum="0" Maximum="1000" Margin="2,30,2,8" Opacity="0.7">
      <ProgressBar.LayoutTransform>
        <RotateTransform Angle="-90"/>
      </ProgressBar.LayoutTransform>
    </ProgressBar>
  </Grid>
</UserControl>
